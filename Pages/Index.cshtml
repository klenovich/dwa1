@page
@model IndexModel
@{
    ViewData["Title"] = "Stock Trading App";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Yeon Stock Trading</h1>
    <p>Trade smartly with <a href="https://docs.microsoft.com/aspnet/core">Yeon Stock Trading app built with ASP.NET Core</a>.</p>
</div>

<div>
    <h2>Available Stocks</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Ticker</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var stock in Model.Stocks)
            {
                <tr>
                    <td>@stock.Name</td>
                    <td>@stock.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h2>Recent Trades</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Ticker</th>
                <th>Quantity</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var trade in Model.Trades)
            {
                <tr>
                    <td>@trade.Ticker</td>
                    <td>@trade.Quantity</td>
                    <td>@trade.TradeType</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h2>Perform a Trade</h2>
    <form method="post" asp-action="PerformTrade">
        <div class="form-group">
            <label for="ticker">Stock Ticker</label>
            <input type="text" class="form-control" id="ticker" name="Trade.Ticker" />
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" class="form-control" id="quantity" name="Trade.Quantity"/>
        </div>
        <div class="form-group">
            <label for="tradeType">Trade Type</label>
            <select class="form-control" id="tradeType" name="Trade.TradeType">
                <option>Buy</option>
                <option>Sell</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Trade</button>
    </form>
</div>